<%- include('../partials/header') %>

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>

    <div class="max-w-6xl mx-auto p-4 md:p-8">
        <div class="flex flex-col md:flex-row justify-between items-start mb-6 gap-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-800">
                    <%= template.name %>
                </h1>
                <p class="text-gray-600">
                    <%= template.description || 'No description' %>
                </p>
                <div class="mt-2 flex items-center space-x-2">
                    <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-xs font-bold uppercase">
                        <%= template.type %>
                    </span>
                    <span class="px-2 py-1 bg-gray-100 text-gray-800 rounded text-xs">
                        <i class="fas fa-stopwatch mr-1"></i>
                        <%= template.estimatedDurationMinutes %> min
                    </span>
                    <span class="px-2 py-1 bg-green-100 text-green-800 rounded text-xs">
                        <i class="fas fa-building mr-1"></i>
                        <%= template.Site.name %>
                    </span>
                </div>
            </div>
            <div class="space-x-2">
                <form action="/patrols/<%= template.id %>/delete" method="POST" class="inline"
                    onsubmit="return confirm('Are you sure?');">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit"
                        class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 shadow transition">
                        <i class="fas fa-trash-alt mr-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Route List -->
            <div class="md:col-span-1 bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
                <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
                    <h3 class="font-bold text-gray-700">Checkpoint Sequence</h3>
                </div>
                <div class="divide-y divide-gray-100 max-h-[500px] overflow-y-auto">
                    <% checkpoints.forEach((cp, index)=> { %>
                        <div class="p-3 flex items-center hover:bg-gray-50 transition">
                            <div
                                class="flex-shrink-0 w-8 h-8 rounded-full bg-blue-600 text-white flex items-center justify-center font-bold text-sm mr-3">
                                <%= index + 1 %>
                            </div>
                            <div>
                                <h4 class="text-sm font-bold text-gray-800">
                                    <%= cp.name %>
                                </h4>
                                <p class="text-xs text-gray-500">
                                    <%= cp.type %> â€¢ UID: <%= cp.uid || 'N/A' %>
                                </p>
                            </div>
                        </div>
                        <% }) %>
                            <% if (checkpoints.length===0) { %>
                                <div class="p-4 text-center text-gray-500 text-sm">No checkpoints assigned.</div>
                                <% } %>
                </div>
            </div>

            <!-- Route Map -->
            <div class="md:col-span-2">
                <div id="routeMap"
                    class="w-full h-[500px] bg-gray-100 rounded-lg shadow-inner border border-gray-300 relative">
                    <div
                        class="absolute top-2 right-2 z-[1000] bg-white px-3 py-1 rounded shadow text-xs font-bold text-gray-600">
                        Total Distance (Est): <span id="totalDist">0</span> m
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const siteLat = <%= template.Site.lat || 51.505 %>;
            const siteLng = <%= template.Site.lng || -0.09 %>;

            const map = L.map('routeMap').setView([siteLat, siteLng], 16);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

            const checkpoints = <% - JSON.stringify(checkpoints) %>;
            const latLngs = [];

            // Add Markers
            checkpoints.forEach((cp, index) => {
                if (cp.lat && cp.lng) {
                    const latLng = [cp.lat, cp.lng];
                    latLngs.push(latLng);

                    const marker = L.marker(latLng).addTo(map);
                    marker.bindPopup(`<b>${index + 1}. ${cp.name}</b><br>${cp.type}`);

                    // Add label
                    marker.bindTooltip(`${index + 1}`, { permanent: true, direction: 'right', className: 'bg-blue-600 text-white px-1 rounded' }).openTooltip();
                }
            });

            // Draw Polyline
            if (latLngs.length > 1) {
                const polyline = L.polyline(latLngs, { color: 'blue', weight: 4, opacity: 0.7, dashArray: '10, 10', lineJoin: 'round' }).addTo(map);
                map.fitBounds(polyline.getBounds(), { padding: [50, 50] });

                // Calculate Distance
                let totalDist = 0;
                for (let i = 0; i < latLngs.length - 1; i++) {
                    totalDist += map.distance(latLngs[i], latLngs[i + 1]);
                }
                document.getElementById('totalDist').innerText = Math.round(totalDist);
            }
        });
    </script>

    <%- include('../partials/footer') %>