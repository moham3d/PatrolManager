<%- include('../partials/header') %>

    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-semibold text-gray-800">Patrol Routes</h1>
        <a href="/patrols/create" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-500 shadow">
            <i class="fas fa-plus mr-2"></i> New Route
        </a>
    </div>

    <!-- Filters & Search -->
    <div class="mb-6 bg-white p-4 rounded-lg shadow flex flex-col md:flex-row gap-4 items-center justify-between">
        <div class="w-full md:w-1/3">
            <div class="relative">
                <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                <input type="text" id="searchInput" placeholder="Search routes..."
                    class="w-full pl-10 pr-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="patrolGrid">
        <% templates.forEach(function(template) { %>
            <div class="bg-white rounded-lg shadow p-6 patrol-card" data-search="<%= template.name.toLowerCase() %> <%= (template.Site ? template.Site.name : '').toLowerCase() %>">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <h2 class="text-xl font-bold text-gray-800">
                            <a href="/patrols/<%= template.id %>" class="hover:text-blue-600 transition"><%= template.name %></a>
                        </h2>
                        <p class="text-sm text-gray-500">
                            <%= template.Site ? template.Site.name : 'Unknown Site' %>
                        </p>
                    </div>
                    <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full uppercase font-bold">
                        <%= template.type %>
                    </span>
                </div>
                <p class="text-gray-600 mb-4 line-clamp-2">
                    <%= template.description || 'No description' %>
                </p>
                <div class="border-t pt-4 flex justify-between items-center text-sm text-gray-500">
                    <span><i class="far fa-clock mr-1"></i>
                        <%= template.estimatedDurationMinutes %> min
                    </span>
                    <span><i class="fas fa-map-marker-alt mr-1"></i>
                        <%= template.checkpointsList ? template.checkpointsList.length : 0 %> points
                    </span>
                </div>
                <div class="mt-4 flex gap-2">
                    <a href="/patrols/<%= template.id %>/edit" class="text-xs font-bold text-indigo-600 hover:underline">EDIT</a>
                </div>
            </div>
            <% }); %>

                <% if (templates.length===0) { %>
                    <div class="col-span-3 text-center py-10 text-gray-500">
                        No patrol routes defined. Create one to get started.
                    </div>
                    <% } %>
    </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
        <div class="mt-8 flex justify-between items-center bg-white p-4 rounded-lg shadow">
            <p class="text-sm text-gray-600">
                Showing <%= (currentPage - 1) * limit + 1 %> to <%= Math.min(currentPage * limit, totalPatrols) %> of <%= totalPatrols %> routes
            </p>
            <div class="flex gap-2">
                <% if (currentPage > 1) { %>
                    <a href="/patrols?page=<%= currentPage - 1 %>&limit=<%= limit %>" class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition font-bold text-sm">Previous</a>
                <% } %>
                
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <a href="/patrols?page=<%= i %>&limit=<%= limit %>" 
                       class="px-4 py-2 rounded-lg font-bold text-sm transition <%= currentPage === i ? 'bg-blue-600 text-white' : 'bg-gray-200 hover:bg-gray-300' %>">
                        <%= i %>
                    </a>
                <% } %>

                <% if (currentPage < totalPages) { %>
                    <a href="/patrols?page=<%= currentPage + 1 %>&limit=<%= limit %>" class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition font-bold text-sm">Next</a>
                <% } %>
            </div>
        </div>
    <% } %>

    <script>
        const searchInput = document.getElementById('searchInput');
        const cards = document.querySelectorAll('.patrol-card');

        searchInput.addEventListener('input', () => {
            const query = searchInput.value.toLowerCase();
            cards.forEach(card => {
                const searchData = card.dataset.search;
                card.style.display = searchData.includes(query) ? '' : 'none';
            });
        });
    </script>

    <%- include('../partials/footer') %>