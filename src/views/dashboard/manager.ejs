<%- include('../partials/header') %>

    <div class="container mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Manager Overview</h1>
            <p class="text-gray-600">Monitoring <%= stats.mySites %> assigned sites</p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-500">
                <div class="flex justify-between items-center">
                    <div>
                        <h3 class="text-2xl font-bold text-gray-800">
                            <%= stats.mySites %>
                        </h3>
                        <p class="text-gray-500 text-sm">My Sites</p>
                    </div>
                    <i class="fas fa-building text-gray-300 text-3xl"></i>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
                <div class="flex justify-between items-center">
                    <div>
                        <h3 class="text-2xl font-bold text-gray-800">
                            <%= stats.activeShifts %>
                        </h3>
                        <p class="text-gray-500 text-sm">Guards on Duty</p>
                    </div>
                    <i class="fas fa-user-shield text-gray-300 text-3xl"></i>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow p-6 border-l-4 border-red-500">
                <div class="flex justify-between items-center">
                    <div>
                        <h3 class="text-2xl font-bold text-gray-800">
                            <%= stats.pendingIncidents %>
                        </h3>
                        <p class="text-gray-500 text-sm">Action Required</p>
                    </div>
                    <i class="fas fa-bell text-gray-300 text-3xl"></i>
                </div>
            </div>
        </div>

        <!-- Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Managed Sites List -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                    <h3 class="font-bold text-gray-800">My Sites</h3>
                </div>
                <div class="divide-y divide-gray-200 max-h-96 overflow-y-auto">
                    <% if (sites.length> 0) { %>
                        <% sites.forEach(site=> { %>
                            <div class="px-6 py-4 hover:bg-gray-50 transition cursor-pointer"
                                onclick="window.location='/sites/<%= site.id %>'">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <h4 class="font-bold text-blue-600">
                                            <%= site.name %>
                                        </h4>
                                        <p class="text-xs text-gray-500 mt-1">
                                            <%= site.address %>
                                        </p>
                                    </div>
                                    <i class="fas fa-chevron-right text-gray-300"></i>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="p-6 text-center text-gray-500">
                                        You have no assigned sites.
                                    </div>
                                    <% } %>
                </div>
            </div>

            <!-- Recent Incidents in Managed Sites -->
            <div class="lg:col-span-2 bg-white rounded-lg shadow overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
                    <h3 class="font-bold text-gray-800">Incident Feed</h3>
                    <span class="text-xs text-gray-500">From your sites</span>
                </div>
                <div class="divide-y divide-gray-200">
                    <% if (recentIncidents.length> 0) { %>
                        <% recentIncidents.forEach(incident=> { %>
                            <div class="px-6 py-4">
                                <div class="flex justify-between items-start mb-2">
                                    <span
                                        class="text-xs font-bold px-2 py-1 rounded-full <%= incident.priority === 'high' ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %> uppercase">
                                        <%= incident.priority %>
                                    </span>
                                    <span class="text-xs text-gray-400">
                                        <%= new Date(incident.createdAt).toLocaleDateString() %>
                                    </span>
                                </div>
                                <h4 class="font-bold text-gray-800">
                                    <%= incident.type %>
                                </h4>
                                <p class="text-sm text-gray-600 mt-1 mb-2">
                                    <%= incident.description %>
                                </p>
                                <div class="flex justify-between items-center text-xs text-gray-500">
                                    <span><i class="fas fa-map-marker-alt mr-1"></i>
                                        <%= incident.Site ? incident.Site.name : 'Unknown Place' %>
                                    </span>
                                    <a href="/incidents" class="text-blue-500 hover:underline">Details</a>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="p-8 text-center text-gray-500">
                                        No recent incidents to report. Good job!
                                    </div>
                                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>