<%- include('../partials/header') %>

    <div class="container mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Command Center</h1>
            <p class="text-gray-600">System Overview for Administrators</p>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6 flex items-center">
                <div class="rounded-full bg-blue-100 p-3 mr-4">
                    <i class="fas fa-map-marked-alt text-blue-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500 text-sm">Total Sites</p>
                    <h3 class="text-2xl font-bold text-gray-800">
                        <%= stats.sites %>
                    </h3>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow p-6 flex items-center">
                <div class="rounded-full bg-green-100 p-3 mr-4">
                    <i class="fas fa-users text-green-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500 text-sm">Total Users</p>
                    <h3 class="text-2xl font-bold text-gray-800">
                        <%= stats.users %>
                    </h3>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow p-6 flex items-center">
                <div class="rounded-full bg-yellow-100 p-3 mr-4">
                    <i class="fas fa-user-clock text-yellow-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500 text-sm">Active Shifts</p>
                    <h3 class="text-2xl font-bold text-gray-800">
                        <%= stats.shifts %>
                    </h3>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow p-6 flex items-center">
                <div class="rounded-full bg-red-100 p-3 mr-4">
                    <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500 text-sm">New Incidents</p>
                    <h3 class="text-2xl font-bold text-gray-800">
                        <%= stats.incidents %>
                    </h3>
                </div>
            </div>
        </div>

        <!-- Live Map Section -->
        <div class="mb-8">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Live Activity Map</h2>
            <%- include('../partials/live_map') %>
                <div class="flex justify-between items-center mt-2">
                    <p class="text-sm text-gray-400"><i class="fas fa-info-circle"></i> Showing active incidents and
                        panic alerts.</p>
                    <p class="text-sm text-gray-500">Real-time updates enabled <span
                            class="inline-block w-2 h-2 bg-green-500 rounded-full animate-pulse ml-1"></span></p>
                </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 bg-white rounded-lg shadow overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                    <h3 class="font-bold text-gray-800">Recent Activity</h3>
                    <a href="/incidents" class="text-blue-600 text-sm hover:underline">View All</a>
                </div>
                <div class="divide-y divide-gray-200">
                    <% if (recentIncidents.length> 0) { %>
                        <% recentIncidents.forEach(incident=> { %>
                            <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50">
                                <div>
                                    <span
                                        class="text-xs font-bold px-2 py-1 rounded-full <%= incident.priority === 'high' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %> uppercase">
                                        <%= incident.priority %>
                                    </span>
                                    <span class="ml-2 font-bold text-gray-800">
                                        <%= incident.type %>
                                    </span>
                                    <div class="text-sm text-gray-500 mt-1">
                                        <i class="fas fa-map-pin mr-1"></i>
                                        <%= incident.Site ? incident.Site.name : 'Unknown Site' %>
                                            <span class="mx-2">â€¢</span>
                                            <%= new Date(incident.createdAt).toLocaleTimeString() %>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <span class="block text-sm font-medium text-gray-900">
                                        <%= incident.reporter ? incident.reporter.name : 'System' %>
                                    </span>
                                    <span class="block text-xs text-gray-500">Reporter</span>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="px-6 py-8 text-center text-gray-500">
                                        No recent activity.
                                    </div>
                                    <% } %>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="font-bold text-gray-800 mb-4">Quick Actions</h3>
                <div class="space-y-3">
                    <a href="/users/create"
                        class="block w-full py-3 px-4 bg-gray-50 hover:bg-gray-100 rounded-lg flex items-center transition">
                        <div
                            class="w-10 h-10 rounded-full bg-blue-500 text-white flex items-center justify-center mr-3">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div>
                            <span class="block font-bold text-gray-800">Add User</span>
                            <span class="text-xs text-gray-500">Create new staff account</span>
                        </div>
                    </a>
                    <a href="/sites/create"
                        class="block w-full py-3 px-4 bg-gray-50 hover:bg-gray-100 rounded-lg flex items-center transition">
                        <div
                            class="w-10 h-10 rounded-full bg-indigo-500 text-white flex items-center justify-center mr-3">
                            <i class="fas fa-building"></i>
                        </div>
                        <div>
                            <span class="block font-bold text-gray-800">Add Site</span>
                            <span class="text-xs text-gray-500">Register new location</span>
                        </div>
                    </a>
                    <a href="/reports"
                        class="block w-full py-3 px-4 bg-gray-50 hover:bg-gray-100 rounded-lg flex items-center transition">
                        <div
                            class="w-10 h-10 rounded-full bg-purple-500 text-white flex items-center justify-center mr-3">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <div>
                            <span class="block font-bold text-gray-800">Reports</span>
                            <span class="text-xs text-gray-500">View analytics</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>