<%- include('../partials/header') %>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Analytics Dashboard</h1>
            <div class="flex gap-3">
                <div class="flex items-center gap-2 bg-white px-3 py-1 rounded-lg shadow-sm border">
                    <label class="text-xs font-bold text-gray-500 uppercase">From</label>
                    <input type="date" id="startDate" class="text-sm border-none focus:ring-0">
                    <label class="text-xs font-bold text-gray-500 uppercase">To</label>
                    <input type="date" id="endDate" class="text-sm border-none focus:ring-0">
                </div>
                <button onclick="exportData('csv')" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow transition text-sm">
                    <i class="fas fa-file-csv mr-2"></i> CSV
                </button>
                <button onclick="exportData('xlsx')" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded shadow transition text-sm">
                    <i class="fas fa-file-excel mr-2"></i> Excel
                </button>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-lg font-semibold text-gray-700 mb-4">Incidents by Priority</h2>
                <div class="relative h-64">
                    <canvas id="priorityChart"></canvas>
                </div>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-lg font-semibold text-gray-700 mb-4">Incidents by Type</h2>
                <div class="relative h-64">
                    <canvas id="typeChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Shift Analytics Row -->
        <h2 class="text-xl font-bold text-gray-800 mb-4">Shift Intelligence</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-lg font-semibold text-gray-700 mb-4">Total Patrol Hours by Site</h2>
                <div class="relative h-64">
                    <canvas id="siteHoursChart"></canvas>
                </div>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-lg font-semibold text-gray-700 mb-4">Guard Efficiency (Avg. Patrols/Shift)</h2>
                <div class="relative h-64">
                    <canvas id="guardEfficiencyChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Patrol & Incident Trends Row -->
        <h2 class="text-xl font-bold text-gray-800 mb-4">Operational Trends</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-lg font-semibold text-gray-700 mb-4">Avg. Patrol Completion by Site (%)</h2>
                <div class="relative h-64">
                    <canvas id="patrolCompletionChart"></canvas>
                </div>
            </div>
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-lg font-semibold text-gray-700 mb-4">Incident Distribution by Hour</h2>
                <div class="relative h-64">
                    <canvas id="incidentTrendsChart"></canvas>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-1 gap-6 mb-8 bg-white rounded-lg shadow overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Missed Checkpoints (Recent)
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    Patrol runs that were completed with less than 100% coverage.
                </p>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200" id="missedTable">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Guard</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Route Template</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Progress</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200" id="missedBody">
                        <tr>
                            <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">Loading data...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Report Scheduler Section -->
        <h2 class="text-xl font-bold text-gray-800 mb-4">Automated Reporting</h2>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
            <!-- Create Schedule Form -->
            <div class="bg-white p-6 rounded-lg shadow border-t-4 border-blue-600">
                <h3 class="text-lg font-bold text-gray-800 mb-4">Schedule New Report</h3>
                <form action="/reports/schedules" method="POST" class="space-y-4">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-1">Report Type</label>
                        <select name="reportType" class="w-full border-gray-300 rounded-lg shadow-sm focus:border-blue-500 focus:ring-blue-500">
                            <option value="incident">Incidents Report</option>
                            <option value="patrol">Patrol Summary</option>
                            <option value="shift">Shift Analytics</option>
                            <option value="visitor">Visitor Logs</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-1">Frequency</label>
                        <select name="frequency" class="w-full border-gray-300 rounded-lg shadow-sm focus:border-blue-500 focus:ring-blue-500">
                            <option value="daily">Daily</option>
                            <option value="weekly">Weekly</option>
                            <option value="monthly">Monthly</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-1">Delivery Email</label>
                        <input type="email" name="email" required value="<%= user.email %>"
                               class="w-full border-gray-300 rounded-lg shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    </div>
                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow transition">
                        <i class="fas fa-calendar-check mr-2"></i> Create Schedule
                    </button>
                </form>
            </div>

            <!-- Existing Schedules List -->
            <div class="lg:col-span-2 bg-white rounded-lg shadow overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50 flex justify-between items-center">
                    <h3 class="text-lg font-bold text-gray-800">Active Schedules</h3>
                    <span class="bg-blue-100 text-blue-800 text-xs font-bold px-2 py-1 rounded-full"><%= schedules.length %> Active</span>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Report</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Frequency</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Run</th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-100">
                            <% if (schedules.length === 0) { %>
                                <tr>
                                    <td colspan="5" class="px-6 py-8 text-center text-gray-400 italic">No automated reports scheduled yet.</td>
                                </tr>
                            <% } %>
                            <% schedules.forEach(s => { %>
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-800 capitalize"><%= s.reportType %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 capitalize"><%= s.frequency %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= s.email %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                                        <%= s.lastRun ? new Date(s.lastRun).toLocaleDateString() : 'Never' %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right">
                                        <form action="/reports/schedules/<%= s.id %>/delete" method="POST" class="inline">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                            <button type="submit" class="text-red-400 hover:text-red-600 transition">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function exportData(format) {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            let url = `/reports/export/incidents?format=${format}`;
            if (startDate) url += `&startDate=${startDate}`;
            if (endDate) url += `&endDate=${endDate}`;
            window.location.href = url;
        }

        document.addEventListener('DOMContentLoaded', () => {
            loadIncidentCharts();
            loadShiftCharts();
            loadPatrolCharts();
            loadTrendCharts();
            loadMissedCheckpoints();
        });

        async function loadShiftCharts() {
            try {
                const res = await fetch('/reports/api/shift-analytics');
                const data = await res.json();
                const ctxS = document.getElementById('siteHoursChart').getContext('2d');
                new Chart(ctxS, {
                    type: 'pie',
                    data: {
                        labels: Object.keys(data.siteHours),
                        datasets: [{
                            data: Object.values(data.siteHours),
                            backgroundColor: ['#6366f1', '#8b5cf6', '#ec4899', '#f43f5e', '#10b981']
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false }
                });
                const guardNames = Object.keys(data.guardPerformance);
                const efficiencyData = guardNames.map(name => {
                    const perf = data.guardPerformance[name];
                    return perf.shifts > 0 ? (perf.patrols / perf.shifts).toFixed(1) : 0;
                });
                const ctxG = document.getElementById('guardEfficiencyChart').getContext('2d');
                new Chart(ctxG, {
                    type: 'bar',
                    data: {
                        labels: guardNames,
                        datasets: [{
                            label: 'Avg. Patrols per Shift',
                            data: efficiencyData,
                            backgroundColor: '#3b82f6',
                            borderRadius: 4
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true } } }
                });
            } catch (err) { console.error(err); }
        }

        async function loadIncidentCharts() {
            try {
                const res = await fetch('/reports/api/incident-summary');
                const data = await res.json();
                const ctxP = document.getElementById('priorityChart').getContext('2d');
                new Chart(ctxP, {
                    type: 'doughnut',
                    data: {
                        labels: Object.keys(data.byPriority),
                        datasets: [{
                            data: Object.values(data.byPriority),
                            backgroundColor: ['#10B981', '#FBBF24', '#F97316', '#EF4444']
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false }
                });
                const ctxT = document.getElementById('typeChart').getContext('2d');
                new Chart(ctxT, {
                    type: 'bar',
                    data: {
                        labels: Object.keys(data.byType),
                        datasets: [{
                            label: 'Count',
                            data: Object.values(data.byType),
                            backgroundColor: '#3B82F6'
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } } }
                });
            } catch (err) { console.error(err); }
        }

        async function loadPatrolCharts() {
            try {
                const res = await fetch('/reports/api/patrol-analytics');
                const data = await res.json();
                const ctx = document.getElementById('patrolCompletionChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: Object.keys(data.completionBySite),
                        datasets: [{
                            label: 'Avg. Completion %',
                            data: Object.values(data.completionBySite),
                            backgroundColor: '#8b5cf6'
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true, max: 100 } } }
                });
            } catch (err) { console.error(err); }
        }

        async function loadTrendCharts() {
            try {
                const res = await fetch('/reports/api/incident-trends');
                const data = await res.json();
                const ctx = document.getElementById('incidentTrendsChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: Array.from({length: 24}, (_, i) => `${i}:00`),
                        datasets: [{
                            label: 'Incidents',
                            data: data.hourlyTrends,
                            borderColor: '#ef4444',
                            tension: 0.3,
                            fill: true,
                            backgroundColor: 'rgba(239, 68, 68, 0.1)'
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false }
                });
            } catch (err) { console.error(err); }
        }

        async function loadMissedCheckpoints() {
            try {
                const res = await fetch('/reports/api/missed-checkpoints');
                const runs = await res.json();
                const tbody = document.getElementById('missedBody');
                tbody.innerHTML = '';
                if (runs.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">Great job! No incomplete patrols found.</td></tr>';
                    return;
                }
                runs.forEach(run => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${new Date(run.date).toLocaleDateString()} ${new Date(run.date).toLocaleTimeString()}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${run.guard}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${run.template}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <div class="w-full bg-gray-200 rounded-full h-2.5 max-w-[100px]">
                            <div class="bg-red-600 h-2.5 rounded-full" style="width: ${run.completionPercent}%"></div>
                        </div>
                        <span class="text-xs mt-1 block">${run.totalVisited} / ${run.totalExpected} (${run.completionPercent}%)</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800 uppercase">
                            ${run.status}
                        </span>
                    </td>`;
                    tbody.appendChild(tr);
                });
            } catch (err) {
                console.error(err);
                document.getElementById('missedBody').innerHTML = '<tr><td colspan="5" class="px-6 py-4 text-center text-sm text-red-500">Error loading data.</td></tr>';
            }
        }
    </script>

    <%- include('../partials/footer') %>