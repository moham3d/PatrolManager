<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Activity Report - <%= report.meta.reportDate %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @media print {
            body {
                -webkit-print-color-adjust: exact;
            }
        }
    </style>
</head>

<body class="bg-gray-100 p-8 print:bg-white print:p-0">

    <div class="max-w-4xl mx-auto bg-white shadow-xl rounded-lg overflow-hidden print:shadow-none">

        <!-- Header -->
        <div class="bg-gray-800 text-white p-8 print:bg-gray-800 print:text-white">
            <div class="flex justify-between items-start">
                <div>
                    <h1 class="text-3xl font-bold uppercase tracking-wide">Daily Activity Report</h1>
                    <p class="text-gray-400 mt-1">PatrolShield Enterprise</p>
                </div>
                <div class="text-right">
                    <h2 class="text-xl font-bold">
                        <%= report.meta.siteName %>
                    </h2>
                    <p class="text-gray-400">Date: <%= report.meta.reportDate %>
                    </p>
                    <p class="text-xs text-gray-500 mt-2">Generated: <%= report.meta.generatedAt.toLocaleString() %>
                    </p>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-3 border-b border-gray-200">
            <div class="p-6 text-center border-r border-gray-200">
                <span class="block text-4xl font-bold text-blue-600">
                    <%= report.stats.completedPatrols %>
                </span>
                <span class="text-gray-500 uppercase text-xs font-bold tracking-wider">Patrols Completed</span>
            </div>
            <div class="p-6 text-center border-r border-gray-200">
                <span class="block text-4xl font-bold text-red-600">
                    <%= report.stats.totalIncidents %>
                </span>
                <span class="text-gray-500 uppercase text-xs font-bold tracking-wider">Incidents</span>
            </div>
            <div class="p-6 text-center">
                <span class="block text-4xl font-bold text-green-600">
                    <%= report.stats.guardsOnDuty %>
                </span>
                <span class="text-gray-500 uppercase text-xs font-bold tracking-wider">Guards on Duty</span>
            </div>
        </div>

        <!-- Content -->
        <div class="p-8 space-y-8">

            <!-- Incidents Section -->
            <section>
                <h3 class="text-lg font-bold text-gray-800 mb-4 border-b pb-2 uppercase text-sm">Incident Log</h3>
                <% if (report.incidents.length> 0) { %>
                    <table class="w-full text-left text-sm">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="p-2 border-b">Type</th>
                                <th class="p-2 border-b">Status</th>
                                <th class="p-2 border-b">Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% report.incidents.forEach(inc=> { %>
                                <tr>
                                    <td class="p-2 border-b font-medium text-red-600">
                                        <%= inc.type %>
                                    </td>
                                    <td class="p-2 border-b">
                                        <%= inc.status %>
                                    </td>
                                    <td class="p-2 border-b text-gray-600">
                                        <%= inc.description %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <p class="text-gray-500 italic text-sm">No incidents reported on this day.</p>
                        <% } %>
            </section>

            <!-- Attendance Section -->
            <section>
                <h3 class="text-lg font-bold text-gray-800 mb-4 border-b pb-2 uppercase text-sm">Guard Attendance</h3>
                <% if (report.attendance.length> 0) { %>
                    <div class="grid grid-cols-2 gap-4">
                        <% report.attendance.forEach(att=> { %>
                            <div class="flex justify-between items-center bg-gray-50 p-3 rounded">
                                <span class="font-bold text-gray-700">
                                    <%= att.guard %>
                                </span>
                                <span class="text-sm text-gray-500">
                                    <%= att.time.toLocaleTimeString() %>
                                </span>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <p class="text-gray-500 italic text-sm">No attendance records found.</p>
                        <% } %>
            </section>

        </div>

        <!-- Footer -->
        <div class="bg-gray-50 p-6 text-center text-xs text-gray-400 border-t">
            <p>End of Report | Verified by PatrolShield</p>
        </div>

    </div>

</body>

</html>