<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Print QR Codes - <%= site.name %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @media print {
            .no-print {
                display: none !important;
            }

            body {
                background: white;
            }

            .page-break {
                page-break-inside: avoid;
            }
        }
    </style>
</head>

<body class="bg-gray-100 p-8">

    <div class="max-w-4xl mx-auto no-print mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">QR Codes for <%= site.name %>
            </h1>
            <p class="text-gray-600">
                <%= site.checkpoints.length %> checkpoints generated.
            </p>
        </div>
        <div class="space-x-4">
            <a href="/sites/<%= site.id %>" class="text-blue-600 hover:underline">Back to Site</a>
            <button onclick="window.print()"
                class="bg-blue-600 text-white px-6 py-2 rounded shadow font-bold hover:bg-blue-700">
                <i class="fas fa-print mr-2"></i> Print
            </button>
        </div>
    </div>

    <!-- Sticker Grid (A4 Friendly) -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-8 max-w-5xl mx-auto bg-white p-8 md:p-0 md:bg-transparent">
        <% checkpoints.forEach(cp=> { %>
            <div
                class="bg-white border-2 border-gray-800 rounded-lg p-6 flex flex-col items-center justify-center text-center page-break shadow-sm print:shadow-none print:border-black">
                <div class="mb-4">
                    <img src="<%= cp.qrData %>" alt="QR Code" class="w-32 h-32 object-contain border border-gray-200">
                </div>
                <h3 class="font-bold text-lg text-gray-900 border-b-2 border-gray-900 pb-1 mb-1">
                    <%= cp.name %>
                </h3>
                <p class="text-xs text-gray-500 font-mono uppercase">UID: <%= cp.id %>
                </p>
                <div class="mt-2 text-[10px] text-gray-400">PatrolShield Asset</div>
            </div>
            <% }) %>
    </div>

</body>

</html>